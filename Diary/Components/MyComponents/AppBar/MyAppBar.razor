@namespace Diary.Components

<MAppBar App="true"
         Elevation="0">
   @if (ChildContent is not null)
       {
           @ChildContent
       }
       else
       {
           <MButton Icon="true"
                    OnClick="OnClick">
               <MIcon>
                   mdi-arrow-left
               </MIcon>
           </MButton>
   
           <MToolbarTitle Class="font-weight-bold">
               @Title
           </MToolbarTitle>
       }
</MAppBar>


