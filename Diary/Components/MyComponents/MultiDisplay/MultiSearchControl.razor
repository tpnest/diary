@namespace Diary.Components

<MultiDisplay Tablet="true">
    <MobileContent>
        <MButton Large="true"
                 Icon="true"
                 OnClick="@Search">
            <MIcon>mdi-magnify</MIcon>
        </MButton>
    </MobileContent>

    <DesktopContent>
        <MTextField @bind-Value="SearchContent"
                    Class="rounded-pill second-background"
                    TValue="string"
                    Solo="true"
                    Flat="true"
                    Dense="true"
                    HideDetails="@("auto")"
                    AppendIcon="mdi-magnify"
                    OnAppendClick="@Search">
        </MTextField>
    </DesktopContent>
</MultiDisplay>